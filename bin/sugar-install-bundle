#!/usr/bin/env python2
import os
import sys

from sugar3.bundle.activitybundle import ActivityBundle

from dbus.mainloop.glib import DBusGMainLoop
DBusGMainLoop(set_as_default=True)


def cmd_help():
    print 'Usage: sugar-install-bundle [ bundlename ] \n\n\
    Install an activity bundle (.xo). \n'

if len(sys.argv) != 2:
    cmd_help()
    sys.exit(2)

bundle = ActivityBundle(sys.argv[1])
path = bundle.install()

# make absolute sure that the BundleRegistry is aware of thia.
os.utime(path, None)


print "%s: '%s' installed." % (sys.argv[0], sys.argv[1])
